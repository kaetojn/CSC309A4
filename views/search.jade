doctype html
<html ng-app>
head
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
    script(src="../public/javascripts/search_controller.js")
    title Search Tutors
    script(src="http://use.edgefonts.net/josefin-sans:n1,n4:default.js" type="text/javascript")
    script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    link(rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="stylesheets/style-search.css" rel="stylesheet" type="text/css")

body
    .header
        h1 Toronto Tutor
        <br></br>
        hr(width="0.00001%")
        .row
            .center
                .col-sm-7
                    input(type='text' class='form-control' placeholder='Search...' ng-model='search')
                .col-sm-2
                    <button type="button" class="btn btn-warning">
                    <span class="glyphicon glyphicon-search"></span> Search
                    </button>

    .container(ng-controller="SearchCtrl")
        h3
            strong Matching Tutors

        table(class='table table-striped')
            thead
                tr
                    th Name
                    th Location
                    th Education
                    th Specialty

            tbody
                tr(ng-repeat="mentor in mentorlist")
                    td {{mentor.username}}
                    td {{mentor.location}}
                    td {{mentor.education}}
                    td {{mentor.specialties}}

    footer
        #contact_us
            a(target="_blank" href='#') Contact Us
        p Toronto Tutor @ 2016. All rights reserved.
</html>
